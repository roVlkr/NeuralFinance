<UserControl x:Name="marker"
             x:Class="NeuralFinance.View.DiagramControls.Axis.XMarker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NeuralFinance.View.DiagramControls.Axis"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Canvas>
        <Grid x:Name="mainGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="6"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Line Y2="{Binding RelativeSource={RelativeSource AncestorType=Grid, Mode=FindAncestor}, Path=ActualHeight}"
                      HorizontalAlignment="Center"
                      Stroke="Black"/>
            </Grid>

            <TextBlock Grid.Row="1"
                       Margin="0 5 0 0"
                       Text="{Binding ElementName=marker, Path=Description}"/>
        </Grid>
    </Canvas>

</UserControl>
